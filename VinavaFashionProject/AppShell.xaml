<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VinavaFashionProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VinavaFashionProject"
    xmlns:views="clr-namespace:VinavaFashionProject.Views"
     Shell.TabBarBackgroundColor="Cornsilk"
     Shell.TabBarTitleColor="OrangeRed"
     Shell.TitleColor="White"
     Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
         Icon="info"
         Title="Home"
         ContentTemplate="{DataTemplate views:HomePage}"
         Route="HomePage" />
        <ShellContent
          Icon="info"
          Title="Product"
          ContentTemplate="{DataTemplate views:HomePage}"
          Route="HomePage" />
        <ShellContent
          Icon="info"
          Title="Order"
          ContentTemplate="{DataTemplate views:HomePage}"
          Route="HomePage" />
        <ShellContent
          Icon="info"
          Title="Collection"
          ContentTemplate="{DataTemplate views:HomePage}"
          Route="HomePage" />
        <ShellContent
        Icon="info"
        Title="Member"
        ContentTemplate="{DataTemplate views:MemberPage}"
        Route="MemberPage" />
    </TabBar>

</Shell>
