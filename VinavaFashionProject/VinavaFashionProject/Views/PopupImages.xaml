<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="VinavaFashionProject.Views.PopupImages"
             >
    <Grid BackgroundColor="#80000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" BackgroundColor="Black">
            <CarouselView  HeightRequest="550" ItemsSource="{Binding ProductImages}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image
                         Source="{Binding ImageSourceData}" WidthRequest="450" HeightRequest="550" Aspect="AspectFit">
                        </Image>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </VerticalStackLayout>
    </Grid>
</toolkit:Popup>