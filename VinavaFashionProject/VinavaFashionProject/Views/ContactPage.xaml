<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VinavaFashionProject.Views.ContactPage"
             xmlns:dxco="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
             Shell.BackgroundColor="#2AC7BF"
             Title="Contact Page">
    <ScrollView>
        <VerticalStackLayout>
            <Label HorizontalOptions="CenterAndExpand" FontSize="20" TextColor="Black" Margin="10" FontAttributes="Bold" Text="CONTACTS"/>
            <VerticalStackLayout Padding="20" BackgroundColor="#2AC7BF">
                <HorizontalStackLayout>
                    <Image Source="address_32" HeightRequest="25" WidthRequest="25"/>
                    <Label TextColor="Black" Margin="5,10" Text="242/129 Bà Hom, Phường 14, District 6, Ho Chi Minh City, Vietnam"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Image HeightRequest="25" WidthRequest="25" Source="phone_32"/>
                    <Label TextColor="Black" Margin="5,10" Text="0792113232"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>