<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"  
             x:Class="VinavaFashionProject.Views.PopupPayPalInfo"
             >
    <VerticalStackLayout BackgroundColor="Cornsilk" Padding="10">
            <Label
            TextColor="Black"
            Text="{Binding PaypalInfo.Note}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
             <Label 
             TextColor="Black"
             Text="{Binding PaypalInfo.Instruct}"
             VerticalOptions="Center" 
             HorizontalOptions="Center" />
            <Label 
            TextColor="Black"   
            Text="{Binding PaypalInfo.PayPalAccount}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</toolkit:Popup>